                                    <a href="#">Đơn hàng của tôi</a>
                                </li>
                                <li class="header__navbar-user-item header__navbar-user-item-separate">
                                    <a href="/users/logout">Đăng xuất</a>
                                </li>
                                {{ else }}
                                <li class="header__navbar-user-item">
                                    <a href="/users/signup">Đăng ký</a>
                                </li>
                                <li class="header__navbar-user-item">
                                    <a href="/users/signin">Đăng nhập</a>
                                </li>
            
                                {{/if}}
                            </ul>
                        </li>
                    </ul>
                </nav>

                <!-- Header with search -->
                <div class="header-with-search">
                    <div class="header__logo">
                        <a href="/" class="header__logo-link">
                            <img class="header__logo-img" src="/img/logo.png">
                        </a>
                    </div>

                    
                    <form action="/search" method="GET" class="header__search">
                        <div class="header__search">
                            <div class="header__search-input-wrap">
                                <input type="text" name="q" class="header__search-input" placeholder="Nhập tên sản phẩm cần tìm">
                            </div>
                            <button type="submit" value="Search" class="header__search-btn">
                                <i class="header__search-btn-icon fas fa-search"></i>
                            </button>
                        </div>

                    </form>
                    
                    



                    <!-- Cart layout -->
                    <div class="header__cart">
                        <div class="header__cart-wrap">
                            <a href="carts/shopping-cart">
                                <i class="header__cart-icon fas fa-shopping-cart"></i>
                                <p>Shopping Cart</p>
                                
                                <span class="header__cart-notify">{{session.cart.totalQty}}</span>
        
                            </a>    
                        </div>
                    </div>                
            </div>
    </header>         
                 










