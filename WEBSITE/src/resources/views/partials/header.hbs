                        <li class="header__navbar-item header__navbar-user">
                            <img src="/img/logoavt.png" alt="" class="header__navbar-user-img">
                            <span class="header__navbar-user-name">User Management</span>
                            
                            <ul class="header__navbar-user-menu">
                                {{#if login}}
                                <li class="header__navbar-user-item">
                                    <a href="/users/profile">Tài khoản của tôi</a>
                                </li>
                                <li class="header__navbar-user-item">
                                    <a href="/products/create">Đăng sản phẩm</a>
